{
  "name": "dukes-ets-editor",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "channels:find": "node utils/live-streams/find-current-channels.js",
    "channels:find:help": "node utils/live-streams/find-current-channels.js --help",
    "channels:fav": "node utils/live-streams/mark-favorite.js",
    "channels:fav:help": "node utils/live-streams/mark-favorite.js --help",
    "channels:public": "node utils/live-streams/fetch-public-stations.js",
    "channels:public:help": "node utils/live-streams/fetch-public-stations.js --tag=lofi --limit=10",
    "dev:ng": "cd client && ng serve",
    "dev:electron": "wait-on http://localhost:4200 && cross-env ANGULAR_DEV_URL=http://localhost:4200 electron electron/main.mjs",
    "dev": "concurrently -k \"npm:dev:ng\" \"npm:dev:electron\"",
    "clean": "rimraf dist || echo \"Warning: Could not clean build folders\"",
    "build:renderer": "cd client && ng build",
    "build:electron": "(npm run clean || true) && npm run build:renderer && electron-builder --win --x64 --ia32",
    "build": "npm run build:electron",
    "release": "npm run build && electron-builder --win --x64 --ia32 --publish always",
    "release:draft": "npm run build && electron-builder --win --x64 --ia32 --publish draft"
  },
  "devDependencies": {
    "@angular/cli": "^21.0.3",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^32.3.3",
    "electron-builder": "^25.1.8",
    "rimraf": "^6.1.2",
    "wait-on": "^8.0.5"
  },
  "main": "electron/main.mjs",
  "build": {
      "appId": "com.dukes-ets-editor.app",
      "productName": "Dukes ETS Radio Editor",
      "files": [
      "electron/**",
      "client/dist/**",
      "utils/**",
      "package.json",
      "electron/live_streams.sii"
      ],
      "asarUnpack": [
      "utils/**/*.js",
      "electron/live_streams.sii"
      ],
      "directories": {
      "buildResources": "assets"
      },
      "win": {
      "target": [
        "dir", "nsis", "zip"
      ],
      "certificateFile": null,
      "certificatePassword": null,
      "sign": false
    },
    "publish": {
      "provider": "github",
      "owner": "BertDuyck",
      "repo": "ets-2-livestreams"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
